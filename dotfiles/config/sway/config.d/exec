# Execute swayidle
exec $idle

# polkit
exec /usr/bin/lxqt-policykit-agent

# Restore default brightness
exec light -S $brightness

# Set wallpaper
exec ~/.azotebg # sets wallpaper (azote needs to be run manually once to generate this script)

# start backlight hue adjust
exec wlsunset.sh

# power notifications
exec poweralertd

# file sync
exec 'insync start'
exec 'QT_QPA_PLATFORM=xcb megasync'

# keepass
exec keepassxc